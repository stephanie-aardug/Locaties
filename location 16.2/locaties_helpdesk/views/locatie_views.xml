<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherited form view of locatie.locatie -->
        <record id="locatie_view_form_inherit_helpdesk" model="ir.ui.view">
            <field name="name">locatie.view.form.inherit.helpdesk</field>
            <field name="model">locatie.locatie</field>
            <field name="inherit_id" ref="locaties.locatie_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" icon="fa-ticket" type="object"
                            name="action_open_helpdesk_ticket">
                        <field widget="statinfo" name="x_aa_helpdesk_ticket_count" string="Tickets"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
