<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherited form view of helpdesk.ticket -->
        <record id="locatie_helpdesk_ticket_view_form" model="ir.ui.view">
            <field name="name">locatie.equipment.form.view</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='priority']" position="after">
                    <field name="x_aa_locatie_id"/>
                    <field name="x_aa_partner_id" invisible="1"/>
                    <field name="x_aa_location_partner_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">['|', ('id', '=',x_aa_partner_id), ('id', '=', x_aa_location_partner_id)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
