<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherited form view of res.partner -->
        <record id="locatie_partner_view" model="ir.ui.view">
            <field name="name">locatie.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="object" groups="base.group_user"
                            name="action_open_location_kanban" context="{'default_partner_id': active_id}"
                            icon="fa-map-marker" attrs="{'invisible': [('x_aa_location_count', '=', 0)]}">
                        <div class="o_stat_info">
                            <field name="x_aa_location_count" class="o_stat_value"/>
                            <span class="o_stat_text"> Locations</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
