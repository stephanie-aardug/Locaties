<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Model locatie.locatie form -->
        <record id="locatie_view_form" model="ir.ui.view">
            <field name="name">locatie.view.form</field>
            <field name="model">locatie.locatie</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="x_aa_stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet string="Location">
                        <div name="button_box" class="oe_button_box">
                            <button class="oe_stat_button" icon="fa-bullseye" type="object"
                                    name="action_open_maintenance_equipment">
                                <field widget="statinfo" name="x_aa_maintenance_equipment_count" string="Equipment"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-spinner" type="object"
                                    name="action_open_maintenance_request">
                                <field widget="statinfo" name="x_aa_maintenance_request_count" string="Maintenance"/>
                            </button>
                        </div>
                        <field widget="image" class="oe_avatar" name="x_aa_photo"/>
                        <field name="x_aa_kanban_state" widget="state_selection" invisible="1"/>
                        <widget name="web_ribbon" text="Archive" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group name="locatie" string="Location">
                                <field name="x_aa_location_partner_id" domain="[('type', '=', 'location')]"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_create': True}"/>
                                <span class="o_form_label o_td_label" name="address_name">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="x_aa_street" placeholder="Street..." class="o_address_street"/>
                                    <field name="x_aa_city" placeholder="City" class="o_address_city"/>
                                    <field name="x_aa_state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"
                                           context="{'country_id': x_aa_country_id, 'default_country_id': x_aa_country_id, 'zip': x_aa_zip}"/>
                                    <field name="x_aa_zip" placeholder="ZIP" class="o_address_zip"/>
                                    <div name="partner_address_country" class="d-flex justify-content-between">
                                        <field name="x_aa_country_id" placeholder="Country"
                                               class="o_address_country"
                                               options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    </div>
                                </div>
                            </group>
                            <group name="customer_information" string="Customer information">
                                <field name="partner_id"
                                       options="{'no_quick_create': True, 'no_create_edit': True, 'no_create': True}"
                                        domain="[('user_ids', '=', False)]"/>
                                <field name="x_aa_partner_phone" widget="phone" options="{'enable_sms': True}"/>
                                <field name="x_aa_partner_email" widget="email"/>
                            </group>
                            <group name="Responsible" string="Responsible">
                                <field name="responsible_id"
                                       can_create="true" can_write="true"/>
                                <field name="x_aa_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Installation" name="installation_page">
                                <group name="installation">
                                    <field name="x_aa_notes"/>
                                    <field name="x_aa_electricity_supply"/>
                                </group>
                            </page>
                            <page string="Maintenance Information" name="maintenance_information_page">
                                <group name="maintenance_information">
                                    <field name="x_aa_maintenance_information"/>
                                </group>
                            </page>
                            <page string="Photos" name="photos_page">
                                <group name="photos">
                                    <group name="photos_left" string="Installation photos">
                                        <field widget="image" options="{'size':[0,180]}" name="x_aa_photo_1"
                                               string="Foto 1"/>
                                        <field widget="image" options="{'size':[0,180]}" name="x_aa_photo_2"
                                               string="Foto 2"/>
                                        <field widget="image" options="{'size':[0,180]}" name="x_aa_photo_3"
                                               string="Foto 3"/>
                                    </group>
                                    <group name="photos_right" string="Maintenance photos">
                                        <field widget="image" options="{'size':[0,180]}" name="x_aa_photo_1_1"
                                               string="Foto 1"/>
                                        <field widget="image" options="{'size':[0,180]}" name="x_aa_photo_2_1"
                                               string="Foto 2"/>
                                        <field widget="image" options="{'size':[0,180]}" name="x_aa_photo_3_1"
                                               string="Foto 3"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Opening hours" name="opening_hours_page">
                                <group name="opening_hours">
                                    <group name="opening_hours_left">
                                        <field name="x_aa_is_open_full_day"/>
                                        <field name="x_aa_opening_hours"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter" name="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Model locatie.locatie kanban -->
        <record id="locatie_view_kanban" model="ir.ui.view">
            <field name="name">locatie.view.kanban</field>
            <field name="model">locatie.locatie</field>
            <field name="arch" type="xml">
                <kanban default_group_by="x_aa_stage_id" default_order="id desc">
                    <field name="responsible_id"/>
                    <progressbar field="x_aa_kanban_state"
                                 colors='{"normal": "warning", "done": "success", "blocked": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_kanban_record oe_kanban_card_muted">
                                <div class="o_kanban_record_details" style="border:0px;">
                                    <div class="o_kanban_record_top" name="auto_kanban_top">
                                        <div class="o_kanban_record_headings" name="auto_kanban_headings">
                                            <field name="priority" widget="boolean_favorite" nolabel="1"/>
                                            <strong class="o_kanban_record_title" name="auto_kanban_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a role="button" class="dropdown-toggle o-no-caret btn"
                                               data-toggle="dropdown" data-display="static" href="#"
                                               aria-label="Dropdown menu"
                                               title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a t-if="widget.editable" role="menuitem" type="edit"
                                                   class="dropdown-item">Edit</a>
                                                <a t-if="widget.deletable" role="menuitem" type="delete"
                                                   class="dropdown-item">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body" name="auto_kanban_body">
                                        <field name="x_aa_tag_ids"/>
                                    </div>
                                    <div class="o_kanban_record_bottom" name="auto_kanban_bottom">
                                        <div class="oe_kanban_bottom_left" name="auto_kanban_bottom_left"/>
                                        <div class="oe_kanban_bottom_right" name="auto_kanban_bottom_right">
                                            <field name="x_aa_kanban_state" widget="state_selection"/>
                                            <t t-set="unassigned">
                                                <t t-esc="env._t('Unassigned')"/>
                                            </t>
                                            <img t-att-src="kanban_image('res.partner', 'image_128', record.responsible_id.raw_value)"
                                                 t-att-title="record.responsible_id.value || unassigned"
                                                 t-att-alt="record.responsible_id.value"
                                                 class="oe_kanban_avatar o_image_24_cover float-right"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Model locatie.locatie tree -->
        <record id="locatie_view_tree" model="ir.ui.view">
            <field name="name">locatie.view.tree</field>
            <field name="model">locatie.locatie</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="responsible_id"/>
                    <field name="x_aa_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </tree>
            </field>
        </record>


        <!-- Model locatie.locatie map -->
        <record id="locatie_view_action" model="ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="res_model">locatie.locatie</field>
            <field name="view_mode">kanban,tree,form,map</field>
        </record>

        <!-- Menus -->
        <menuitem
                name="Locations"
                id="menu_main_locatie"
                sequence="79"
                web_icon="locaties,static/description/Location-module-icon.png"/>
        <menuitem
                id="menu_locatie"
                name="Location"
                action="locaties.locatie_view_action"
                parent="locaties.menu_main_locatie"
                sequence="2"/>
    </data>
</odoo>
